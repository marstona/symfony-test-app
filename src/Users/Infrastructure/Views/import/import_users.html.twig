{% extends 'base.html.twig' %}

{% block subtitle %}
  <h1 class="title">Import users</h1>
{% endblock subtitle %}

{% block body %}
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        {{ form_start(form) }}
          {{ form_errors(form) }}

          <div class="field">
            <div class="file">
              <label class="file-label">
                {{ form_widget(form.file, {attr: {class: 'file-input'}}) }}
                <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Choose a fileâ€¦
                </span>
              </span>
              </label>
            </div>
          </div>

          <div class="field">
            <div class="control">
              {{ form_widget(form.submit, {'attr': {'class': 'button is-primary'}, 'label': 'Import'}) }}
            </div>
          </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock body %}